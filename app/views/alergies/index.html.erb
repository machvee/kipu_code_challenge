<p id="notice"><%= notice %></p>

<h1>Alergies</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alergies.each do |alergy| %>
      <tr>
        <td><%= alergy.description %></td>
        <td><%= alergy.patient %></td>
        <td><%= link_to 'Show', alergy %></td>
        <td><%= link_to 'Edit', edit_alergy_path(alergy) %></td>
        <td><%= link_to 'Destroy', alergy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

