<p id="notice"><%= notice %></p>

<h1>Diagnoses</h1>

<table>
  <thead>
    <tr>
      <th>Coding system</th>
      <th>Code</th>
      <th>Description</th>
      <th>Admission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diagnoses.each do |diagnosis| %>
      <tr>
        <td><%= diagnosis.coding_system %></td>
        <td><%= diagnosis.code %></td>
        <td><%= diagnosis.description %></td>
        <td><%= diagnosis.admission %></td>
        <td><%= link_to 'Show', diagnosis %></td>
        <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis) %></td>
        <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diagnosis', new_diagnosis_path %>
